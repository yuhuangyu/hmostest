import { Logger } from 'utils';
import { AspectUtil } from './AspectUtil';

const TAG: string = '[AudioPlayerAspect]';

export class AudioPlayerAspect {
  static createAspect() {
    const harName: string = 'audioplayer';
    import(harName).then((ns: ESObject) => {
      const targetClass: ESObject = ns.AudioPlayerService;
      const methodClassName: string = 'AudioPlayerService';
      AspectUtil.addBefore(methodClassName, targetClass, 'speak', false);
      AspectUtil.addAfter<void>(methodClassName, targetClass, 'speak', false);

      AspectUtil.addBefore(methodClassName, targetClass, 'play', false);
      AspectUtil.addAfter<void>(methodClassName, targetClass, 'play', false);

      AspectUtil.addBefore(methodClassName, targetClass, 'pause', false);
      AspectUtil.addAfter<void>(methodClassName, targetClass, 'pause', false);

      AspectUtil.addBefore(methodClassName, targetClass, 'stop', false);
      AspectUtil.addAfter<void>(methodClassName, targetClass, 'stop', false);
    }).catch((e: Error) => {
      Logger.error(TAG, `import ${harName} error, ${JSON.stringify(e)}`);
    })
  }
}